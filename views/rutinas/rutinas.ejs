          <% } %>
        </tbody>
      </table>
      
      <!-- Tabla para grupos musculares espalda, trapecios y tríceps -->
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <td>Grupo Muscular</td>
            <td>Ejercicio</td>
            <td>Series</td>
            <td>Repeticiones</td>
          </tr>
        </thead>
        <tbody>
          <% if (rutinas && rutinas.definicion) { %>
            <% ["Espalda", "Trapecio", "Tríceps"].forEach((grupoMuscular) => { %>
              <% rutinas.definicion[grupoMuscular].forEach((ejercicio) => { %>
                <tr>
                  <td><%= grupoMuscular %></td>
                  <td><%= ejercicio.ejercicio %></td>
                  <td><%= ejercicio.series %></td>
                  <td><%= ejercicio.repeticiones %></td>
                </tr>
              <% }); %>
            <% }); %>
          <% } %>
        </tbody>
      </table>
      
    </div>
    
  </div>
</div>
<!-- End of Main Content -->

<%- include("../templates/footer") %>

<script>
  // Función para mostrar la tabla de rutina de volumen y ocultar la de definición
  document.getElementById("btnVolumen").addEventListener("click", function() {
    document.getElementById("tablaVolumen").style.display = "block";
    document.getElementById("tablaDefinicion").style.display = "none";
  });
  
  // Función para mostrar la tabla de rutina de definición y ocultar la de volumen
  document.getElementById("btnDefinicion").addEventListener("click", function() {
    document.getElementById("tablaVolumen").style.display = "none";
    document.getElementById("tablaDefinicion").style.display = "block";
  });
</script>
